$[language java]
$[domain Exception]
$[D summary, main "This template installs exception classes used to trigger the return status codes for REST"]
$[D summary, main "endpoints."]
$[D "The handler class contains special code and annotations that perform the"]
$[D "exception to status code mapping."]

$[let destDir = domain.namespace|path]
$[install "exception/DaoException.java" destDir]
$[install "exception/EntityExistsException.java" destDir]
$[install "exception/EntityNotFoundException.java" destDir]
$[install "exception/ErrorMessage.java" destDir]
$[install "exception/ForbiddenException.java" destDir]
$[install "exception/ServiceException.java" destDir]
$[install "exception/UnauthorizedException.java" destDir]
$[install "exception/ValidationException.java" destDir]
$[install "exception/handler/RestResponseEntityExceptionHandler.java" destDir + "/handler"]